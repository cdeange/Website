#!/usr/bin/env bash

APP_ID="$1"

if [ -z "$APP_ID" ]; then
	echo -e "\n\tUsage:\t$0 <appengine-app-id>\n" >&2
	exit 1
fi

# Build it.
echo "Building $APP_ID..."
gulp
cp app.yaml dist/app.yaml

echo "Deploying $APP_ID..."
gcloud preview app deploy dist/app.yaml --project $APP_ID --promote --version 1
